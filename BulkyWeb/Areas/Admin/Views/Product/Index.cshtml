@model List<Product>

<div class="card shadow border-0 my-4">
    <div class="card-header">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="bg-primary text-white py-2"> Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row  pb-3">
                <div class="col-6">
                   
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Create New Product</a>
                </div>

            </div>

            <h1></h1>
            <table class="table table-bordered table-striped" >
                <thead>
                    <tr>
                       
                        <th>
                            Title
                        </th>
                        <th>
                            ISBN
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            Category
                        </th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.Title))
                    {
                        <tr>
                            <td>@obj.Title</td>
                            <td>@obj.ISBN</td>
                            
                            <td>@obj.ListPrice</td>
                            <td>@obj.Author</td>
                            <td>@obj.CategoryId</td>
                            <td>

                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger  mx-2">
                                        <i class="bi bi-x-circle"></i> Delete
                                    </a>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>




